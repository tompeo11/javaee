<?xml version="1.0" encoding="UTF-8" ?>

<decorators defaultdir="/decorator">

    <decorator name="admin" page="admin_layout.jsp">
        <pattern>/admin/*</pattern>
        <pattern>/admin</pattern>
    </decorator>

    <decorator name="user" page="user_layout.jsp">
        <pattern>/*</pattern>
        <pattern>/</pattern>
    </decorator>

    <excludes>
        <pattern>/admin/login*</pattern>
        <pattern>/login</pattern>

        <pattern>/products/detail*</pattern>
    </excludes>



</decorators>